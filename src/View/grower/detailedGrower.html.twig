{% extends './base.html.twig' %}
{% block content %}
    <div class="page-title">
        <h1>DÃ©tails du producteur</h1>
    </div>

    <div class="detailed-grower-container">
            <div class="grower">
                    <img src="https://via.placeholder.com/200" class="grower-img" alt="grower">
                    <div class="grower-card">
                        <h5 class="grower-name">{{ grower.name }}</h5>
                        <p class="grower-location">{{ grower.location }}</p>
                        <p class="grower-email">{{ grower.email }}</p>
                    </div>
            </div>
    </div>

    <h2 class="grower-product-title">Produits du producteur</h2>
    <main class="grower-product-container">
        {% for product in products %}
                <div class="product">
                    <form method="post" action="/detailedGrower/addToCart/{{ product.id }}" id="{{ product.id }}">
                    <img src="https://via.placeholder.com/200" class="product-img" alt="produit">
                    <div class="product-card">
                        <h5 class="product-title"><a href="/detailedProduct/{{ product.id }}">{{ product.name }}</a></h5>
                        <p class="product-description">{{ product.description }}</p>
                        <input type="submit" value="Add to cart" class="btn">
                    </div>
                    </form>
                </div>
        {% endfor %}
    </main>

{% endblock %}