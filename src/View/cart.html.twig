{% extends './base.html.twig' %}
{% block content %}
  <div class="page-title">
    <h1>
      Mon panier
    </h1>
  </div>
  <div class="cart-container">
    {% for val in products %}
      <div class="cart-product">
          <img src="https://via.placeholder.com/100" class="product-img" alt="produit" />
          <div class="product-card">
            <h5 class="product-title">
              {{ val.name }}
            </h5>
            <p class="product-description">
              {{ val.description }}
            </p>
          </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
